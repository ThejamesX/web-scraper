# Database Configuration
# For production, use PostgreSQL
DATABASE_URL=postgresql+asyncpg://user:password@localhost/pricescout

# For development/testing, use SQLite
# DATABASE_URL=sqlite+aiosqlite:///./pricescout.db

# API Configuration
API_TITLE=PriceScout API
API_VERSION=1.0.0
API_DESCRIPTION=E-commerce product search and price tracking API

# Scheduler Configuration
# How often to check prices (in hours)
PRICE_CHECK_INTERVAL_HOURS=4

# Scraper Configuration
# Timeout for page loads in milliseconds
SCRAPER_TIMEOUT=30000
# Whether to run browser in headless mode
SCRAPER_HEADLESS=true
# Enable mock mode to return mock data when scraping fails (useful for testing/demo)
SCRAPER_MOCK_MODE=false
